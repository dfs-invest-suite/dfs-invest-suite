// RUTA: libs/ui-shared/tsconfig.lib.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "include": [
    "src/index.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/styles/**/*.css"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "src/test-setup.ts"
  ]
}
