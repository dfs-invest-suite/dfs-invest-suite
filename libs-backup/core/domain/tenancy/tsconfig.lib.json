// RUTA: libs/core/domain/tenancy/tsconfig.lib.json
{
  "extends": "./tsconfig.json", // Hereda del tsconfig.json de esta librería
  "compilerOptions": {
    "outDir": "../../../../dist/out-tsc",
    "declaration": true, // Crucial para librerías
    "declarationMap": true, // Bueno para DX
    "module": "commonjs", // Típico para librerías Node.js
    "types": ["node"] // Tipos de ambiente
    // noEmit: false implícito o explícito, ya que este SÍ emite.
  },
  "include": ["src/index.ts", "src/lib/**/*.ts"], // Solo el código fuente real
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts", // Excluir tests
    "src/**/*.test.ts"
  ]
}
